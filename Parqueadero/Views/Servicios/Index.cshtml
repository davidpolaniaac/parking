@model IEnumerable<Parqueadero.Models.Servicio>

@{
    ViewBag.Title = "Index";
}

<h2>Servicios</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreServcio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoVehiculo.NombreVehiculo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreServcio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Costo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoVehiculo.NombreVehiculo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdServicio }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdServicio }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdServicio })
        </td>
    </tr>
}

</table>
